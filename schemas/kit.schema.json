{
  "$id": "https://raw.githubusercontent.com/mrl5/metarepo-cpe-tag/master/schemas/kit.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "kit",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "kit name"
    },
    "type": {
      "type": "string",
      "description": "release type (e.g. indy, auto)"
    },
    "branches": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "branch name"
          },
          "catpkgs": {
            "type": "array",
            "items": {
              "type": "object"
            },
            "sha1": {
              "type": "string",
              "description": "current revision of branch"
            }
          },
          "stability": {
            "type": "string",
            "description": "branch stability (e.g. prime, beta)"
          }
        },
        "required": ["name", "catpkgs", "sha1", "stability"]
      }
    }
  },
  "required": ["name", "branches", "type"]
}
